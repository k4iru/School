@model assign4_n01446543.Models.Teacher
@{
    ViewBag.Title = "Update";
}

<h2>Update Teacher</h2>

<form action="/Teacher/Update/@Model.teacherId" method="POST">

    <label for="fname">First Name</label>
    <input type="text" id="fname" name="fname" value="@Model.teacherFname" required />

    <label for="lname">Last Name</label>
    <input type="text" id="lname" name="lname" value="@Model.teacherLname" required/>

    <label for="salary">Salary</label>
    <input type="number" id="salary" min="0" name="salary" value="@Model.salary" step=".01" max="150" required/>
 

    <input type="submit" value="Update Teacher" />

</form>